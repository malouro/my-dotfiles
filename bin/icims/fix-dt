#!/bin/sh

# Fixes hosts file with necessary IP for DT access
# (@optimum: pls fix, thx)

DT_ENTRY="10.147.53.169 dependencytrack.internal.icims.io"
HOSTS_FILE="/etc/hosts"

# Append the entry to the bottom of the file
add_dt_entry=`cat $HOSTS_FILE; echo "\n\n$DT_ENTRY"`
echo "$add_dt_entry" > "$HOSTS_FILE"
